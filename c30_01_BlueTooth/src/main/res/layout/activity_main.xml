<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.student.app_bluetooth.MainActivity"
    android:background="@drawable/bg">

    <Button
        android:id="@+id/btnTurnOn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:onClick="onClick"
        android:padding="15dp"
        android:text="開 啟 電 燈"
        android:textAllCaps="false"
        android:textSize="22dip"/>

    <Button
        android:id="@+id/btnTurnOff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:onClick="onClick"
        android:padding="15dp"
        android:text="關 閉 電 燈"
        android:textAllCaps="false"
        android:textSize="22dip"/>

    <Button
        android:id="@+id/btnVocal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:onClick="onClick"
        android:padding="15dp"
        android:text="語 音 控 制"
        android:textAllCaps="false"
        android:textSize="22dip"/>

    <Button
        android:id="@+id/btnReset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:padding="15dp"
        android:text="重 設 藍 芽"
        android:textAllCaps="false"
        android:textSize="22dip"/>
</LinearLayout>
